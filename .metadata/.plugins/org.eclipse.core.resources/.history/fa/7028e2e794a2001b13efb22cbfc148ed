#include "main_loop.h"

void main_loop(){

	float differential = motor.pre_ang - motor.ang;
	if(differential < 0) differential += 360;
	float w = (differential * (2*PI)/360) * 10000;			// rad/sec
	motor.rpm = (w * 60 / (2*PI));

	setpoint_value = setpoint(rc);
	mode = getMode(rc);

	if(mode == NON_MOMENT){
#if 0
		speed_command = motor.rpm + speedController(setpoint_value, motor);
		moment_command = 0;
#else
		speed_command = map(rc.throttle, RC_MIN, RC_MAX, 1190, 2000);
	}else if(mode == MOMENT){
		moment_command = motor.rpm + momentController(setpoint_value, motor);
		speed_command = 0;
	}else{
		speed_command = 0;
		moment_command = 0;
	}

	outputMotor(speed_command, moment_command, mode);
}
